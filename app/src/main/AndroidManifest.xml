<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zizohanto.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BakingAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.recipes.RecipesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ui.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ui.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zizohanto.bakingapp.ui.ItemListActivity" />
        </activity>

        <service
            android:name=".data.network.BakingAppSyncIntentService"
            android:exported="false" />
    </application>

</manifest>