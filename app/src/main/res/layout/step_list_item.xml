<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_step_short_desc"
        android:layout_width="0dp"
        android:layout_gravity="center|left"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_weight="0.8"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="@string/step_short_desc" />

    <ImageView
        android:id="@+id/iv_step_video_icon"
        android:layout_width="0dp"
        android:layout_gravity="center|right"
        android:layout_weight="0.2"
        android:layout_height="@dimen/iv_list_step_video_icon_height"
        android:contentDescription="@string/content_description_play_button"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        app:srcCompat="@android:drawable/ic_media_play" />

</LinearLayout>