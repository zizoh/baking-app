<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_step_short_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/list_step_video_icon"
        android:layout_width="@dimen/iv_list_step_video_icon_width"
        android:layout_height="@dimen/iv_list_step_video_icon_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/iv_list_step_video_icon_margin_right"
        android:layout_marginRight="@dimen/iv_list_step_video_icon_margin_right"
        android:contentDescription="@string/content_description_play_button"
        android:tint="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_media_play" />

</RelativeLayout>