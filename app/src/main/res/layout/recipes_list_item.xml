<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cv_recipes_list_content_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recipe_preview_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:contentDescription="@string/recipe_preview_image"
            android:scaleType="fitCenter"
            android:src="@drawable/dummy_recipe_preview">

        </ImageView>

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/tv_recipe_name_margin_left"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_recipe_name_text_size"
            android:padding="@dimen/tv_recipe_name_padding"
            tools:text="@string/recipe_name" />

    </LinearLayout>
</android.support.v7.widget.CardView>